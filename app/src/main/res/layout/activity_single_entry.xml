<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/entryContentInSingleEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingBottom="16dp"
        android:text="TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView"
        app:layout_constraintTop_toBottomOf="@+id/entryTagsTV"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/entryHourInSingleEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:paddingTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/entryTagsTV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/entryTagsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/entryContentInSingleEntry"
        app:layout_constraintStart_toEndOf="@+id/hashSign"
        app:layout_constraintTop_toBottomOf="@+id/entryHourInSingleEntry" />

    <TextView
        android:id="@+id/hashSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12dp"
        android:text="#: "
        app:layout_constraintBottom_toTopOf="@+id/entryContentInSingleEntry"
        app:layout_constraintEnd_toStartOf="@+id/entryTagsTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entryHourInSingleEntry" />

</android.support.constraint.ConstraintLayout>