<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/entryContentInSingleEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView TextView"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/entryHourInSingleEntry" />

    <TextView
        android:id="@+id/entryHourInSingleEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:paddingTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/entryContentInSingleEntry" />

</android.support.constraint.ConstraintLayout>