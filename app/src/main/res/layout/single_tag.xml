<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tagTV"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:text="#tag"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tagDateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingLeft="5dp"
        android:text="15.05.2019"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/dayTV"
        app:layout_constraintTop_toBottomOf="@+id/tagTV" />

    <TextView
        android:id="@+id/tagContentTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="15dp"
        android:text="Pani Bonham pojęła w lot, że..."
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tagDateTV" />

</android.support.constraint.ConstraintLayout>